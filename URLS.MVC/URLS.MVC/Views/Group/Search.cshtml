@model IEnumerable<URLS.Models.GroupViewModel>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div>
    <form>
        <input type="text" name="name" />
        <input type="submit" value="Пошук" />
    </form>
    <a asp-action="Create" asp-controller="Group">Створити групу</a>
</div>

@if (Model == null || Model.Count() == 0)
{
    <p>Жодної групи не знайдено</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudyingIsOver)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudyingIsOver)
                    </td>
                    <td>
                        @Html.ActionLink("Детальніше", "GetGroup", "Group", new {  id = item.Id  })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}