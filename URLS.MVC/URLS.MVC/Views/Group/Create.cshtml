@model URLS.Models.GroupCreateModel

@{
    var specialties = ViewBag.Specialties as IEnumerable<SpecialtyViewModel>;
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Meta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartStudy" class="control-label"></label>
                <input asp-for="StartStudy" class="form-control" />
                <span asp-validation-for="StartStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndStudy" class="control-label"></label>
                <input asp-for="EndStudy" class="form-control" />
                <span asp-validation-for="EndStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <input asp-for="Course" class="form-control" />
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="SpecialtyId" class="form-control" asp-items="@(new SelectList(specialties, "Id", "Name"))" />
                @Html.DropDownList("SpecialtyId", new SelectList(specialties, "Id", "Name"))
            </div>

            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

